<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EquityX.Maui.Views.SummaryPage"
             Title="Summary"
             Shell.TitleColor="#ffc600"
             Shell.BackgroundColor="Black">

    <ContentPage.Resources>
        <Style TargetType="Grid">
            <Setter Property="VisualStateManager.VisualStateGroups">
                <VisualStateGroupList>
                    <VisualStateGroup x:Name="CommonStates">
                        <VisualState x:Name="Normal" />
                        <VisualState x:Name="Selected">
                            <VisualState.Setters>
                                <Setter Property="BackgroundColor"
                                    Value="#ffc600" />
                            </VisualState.Setters>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateGroupList>
            </Setter>
        </Style>
    </ContentPage.Resources>

    <Grid RowDefinitions="*"
          ColumnDefinitions="*"
          Padding="10">

        <CollectionView Grid.Row="1"                       
                        x:Name="listAssets"
                        BackgroundColor="white"
                        SelectionMode="Single"
                        SelectionChanged="listAssets_SelectionChanged">

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid RowDefinitions="*,*"
                          ColumnDefinitions="2*,*,*"
                          Padding="10">

                        <Label Text="{Binding AssetSymbol}"
                               Grid.Column="0"
                               Grid.Row="0"
                               FontAttributes="Bold"
                               FontSize="16"/>
                        <Label Text="{Binding Name}"
                               Grid.Column="0"
                               Grid.Row="1"
                               TextColor="Gray"/>
                        <Label Text="Unit"
                               Grid.Column="1"
                               Grid.Row="0"
                               HorizontalOptions="Start"/>
                        <Label Text="{Binding Unit}"
                               Grid.Column="1"
                               Grid.Row="1"
                               HorizontalOptions="Start"
                               TextColor="Gray"/>
                        <Label Text="Profit/Loss" 
                               Grid.Column="2"
                               Grid.Row="0"
                               HorizontalOptions="Start"/>
                        <Label Text="{Binding TotalDifference, StringFormat='{0} USD'}"
                               Grid.Column="2"
                               Grid.Row="1"
                               HorizontalOptions="Start"
                               TextColor="Gray"/>       
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>


</ContentPage>