<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EquityX.Maui.Views.SignUpPage"
             Title="EquityX"
             BackgroundImageSource="logo.png">

    <Grid RowDefinitions="*,*"
          ColumnDefinitions="*"
          RowSpacing="50">

        <Label
            Grid.Row="0"
            Grid.Column="0"
            Text="Welcome to EquityX application"
            TextColor="White"
            FontSize="Header"
            HorizontalOptions="Center"
            VerticalOptions="Center"/>

        <Button
            x:Name="btnSignUp"
            Clicked="btnSignUp_Clicked"
            Grid.Column="0"
            Grid.Row="1"
            Text="Sign Up"
            FontSize="Medium"
            WidthRequest="200"
            HorizontalOptions="Center"
            VerticalOptions="Center"/>


    </Grid>
</ContentPage>