<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EquityX.Maui.Views.HomePage"
             Title="Home"
             BackgroundColor="White">


    <Grid RowDefinitions="0.25*,1.5*,3*"
          ColumnDefinitions="*,*"
          RowSpacing="10"
          ColumnSpacing="10"
          Margin="50,50">

        <Label Text="Hello, Faran Khan"
               TextColor="Black"/>

        <Frame Grid.ColumnSpan="2"
               Grid.Row="1"
               BorderColor="White"
               BackgroundColor="#f8f9fa"
               CornerRadius="20">

            <Grid RowDefinitions="1*,1*"
                  ColumnDefinitions="1*,1*"
                  RowSpacing="10"
                  ColumnSpacing="10">

                <Label Grid.ColumnSpan="2"
                       Grid.Row="0"
                       Text="Available Funds: $500"
                       TextColor="Black"
                       />

                <Button Grid.Column="0"
                        Grid.Row="1"
                        x:Name="btnAddFunds"
                        TextColor="Black"
                        BackgroundColor="#ffc600"
                        Text="Deposit"
                        HorizontalOptions="Center"
                        WidthRequest="100"
                        />

                <Button Grid.Column="1"
                        Grid.Row="1"
                        x:Name="btnWithdrawFunds"
                        TextColor="Black"
                                             
                        BackgroundColor="#ebebeb"
                        Text="Withdraw"
                        HorizontalOptions="Center"
                        WidthRequest="100"
                        />


            </Grid>

        </Frame>

        <!--Options-->
        <Grid Grid.Row="2"
              Grid.ColumnSpan="2"
              RowDefinitions="*,*,*"
              ColumnDefinitions="*,*"
              RowSpacing="10"
              ColumnSpacing="10">

            <Frame Grid.Row="0"
                   Grid.Column="0"
                   BorderColor="White"
                   BackgroundColor="#f8f9fa"
                   CornerRadius="20"
                   Padding="10">

                <VerticalStackLayout>
                    <Label Text="Portfolio" HorizontalOptions="Center"/>
                    <Image Source="portfolio.png" HorizontalOptions="Center"/>
                </VerticalStackLayout>



            </Frame>

            <Frame Grid.Row="0"
                   Grid.Column="1"
                   BorderColor="White"
                   BackgroundColor="#f8f9fa"
                   CornerRadius="20"
                   Padding="10">
                <VerticalStackLayout>
                    <Label Text="Summary" HorizontalOptions="Center"/>
                    <Image Source="summary.png" HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </Frame>

            <Frame Grid.Column="0"
                   Grid.Row="1"
                   BorderColor="White"
                   BackgroundColor="#f8f9fa"
                   CornerRadius="20"
                   Padding="10">
                <VerticalStackLayout>
                    <Label Text="Stocks" HorizontalOptions="Center"/>
                    <Image Source="stocks.png" HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </Frame>

            <Frame Grid.Column="1"
                   Grid.Row="1"
                   BorderColor="White"
                   BackgroundColor="#f8f9fa"
                   CornerRadius="20"
                   Padding="10">
                <VerticalStackLayout>
                    <Label Text="Crypto" HorizontalOptions="Center"/>
                    <Image Source="crypto.png" HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </Frame>

            <Frame Grid.Column="0"
                   Grid.Row="2"
                   BorderColor="White"
                   BackgroundColor="#f8f9fa"
                   CornerRadius="20"
                   Padding="10">
                <VerticalStackLayout>
                    <Label Text="Market" HorizontalOptions="Center"/>
                    <Image Source="market.png" HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </Frame>

        </Grid>

    </Grid>

</ContentPage>