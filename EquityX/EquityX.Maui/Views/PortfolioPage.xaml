<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EquityX.Maui.Views.PortfolioPage"
             Title="Portfolio"
             Shell.TitleColor="#ffc600"
             Shell.BackgroundColor="Black">

    <Grid RowDefinitions="50,*"
          ColumnDefinitions="*"
          Padding="10"
          RowSpacing="10">

        <Border BackgroundColor="#ffc600"
                StrokeThickness="0"
                StrokeShape="RoundRectangle 10">
            <VerticalStackLayout Grid.Row="0">
                <Label x:Name="lblAsset"
                       FontSize="Subtitle"
                       HorizontalOptions="Center"/>
                <Label Text="Assets"
                   FontSize="Caption"
                   HorizontalOptions="Center"/>
            </VerticalStackLayout>
        </Border>

        <CollectionView Grid.Row="1"                       
                        x:Name="listAssets"
                        BackgroundColor="#f8f9fa"
                        SelectionMode="Single"
                        SelectionChanged="listAssets_SelectionChanged">

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Label Text="{Binding Name}"
                               Grid.Column="0"
                               Grid.Row="0"
                               FontAttributes="Bold"
                               FontSize="16"/>
                        <Label Text="{Binding Investment}"
                               Grid.ColumnSpan="2"
                               Grid.Row="1"
                               TextColor="Gray"/>
                        <Label Text="{Binding Unit}"
                               Grid.Column="1"
                               Grid.Row="0"
                               WidthRequest="500"
                               TextColor="Gray"/>   
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>



        <!--<ListView Grid.Row="1"
                  BackgroundColor="#f8f9fa"
                  x:Name="listAssets">

            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Path=Name}"
                              Detail="{Binding Path=Investment}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <Button x:Name="btnHome"
                Grid.Row="2"
                Text="Home"
                Clicked="btnHome_Clicked"
                BackgroundColor="#ffc600"
                TextColor="Black"/>-->

    </Grid>
</ContentPage>